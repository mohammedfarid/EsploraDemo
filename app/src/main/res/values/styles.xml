<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <!--<item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:elevation">5dp</item>
        <item name="titleTextAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
    </style>
</resources>